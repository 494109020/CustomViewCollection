<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_custom1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="简单的自定义TextView" />

        <Button
            android:id="@+id/btn_custom2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RxJava的简单使用" />

        <Button
            android:id="@+id/btn_custom3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ele购物按钮" />

        <Button
            android:id="@+id/btn_custom4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SlackLoadingView" />

        <Button
            android:id="@+id/btn_custom5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BezierLoadingView" />

        <Button
            android:id="@+id/btn_custom6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scene的使用" />

        <Button
            android:id="@+id/btn_custom7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DynamicProxy的使用" />

        <Button
            android:id="@+id/btn_custom8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="网页调起app" />

        <Button
            android:id="@+id/btn_custom9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Matrix学习" />

        <Button
            android:id="@+id/btn_custom10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="画饼图" />
    </LinearLayout>
</ScrollView>
