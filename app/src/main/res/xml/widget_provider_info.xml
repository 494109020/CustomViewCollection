<?xml version="1.0" encoding="utf-8"?>
<appwidget-provider xmlns:android="http://schemas.android.com/apk/res/android"
                    android:initialLayout="@layout/widget_desktop"
                    android:minHeight="40dp"
                    android:minWidth="110dp"
                    android:previewImage="@drawable/leak_canary_icon"
                    android:updatePeriodMillis="86400000">
    <!--
        android:initialLayout="@layout/widget_desktop"      初始化小组件的布局
        小组件的大小(N*N):早期版本为74xN-2的原则，目前更新为70xN-30
        android:minHeight="40dp"                            小组件的最小宽
        android:minWidth="40dp"                             小组件的最小高
        android:previewImage="@drawable/leak_canary_icon"   小组件的预览图片
        android:updatePeriodMillis="86400000"               小组件更新的时间(ms)最小30分钟。
    -->
</appwidget-provider>